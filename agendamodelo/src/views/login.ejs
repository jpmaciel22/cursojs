   <%- include ('includes/head')%>
   <%- include ('includes/nav')%>
   <div class="container">
    <div>
        <div class="col-log-2"></div>

        <div class="col-log-8 my-5">
            <h1 class="text-center">Login</h1>
            <p class="lead text-center">Faça login ou crie sua conta abaixo.</p>
            <%- include ('includes/messages');%>
            <div class="row">
                <div class="col-lg">
                <h4>Faça o cadastro</h4>
                <p>Se você ainda não possui conta, preencha o formulário abaixo.</p>
                <form action="/login/register" method="post">
                  <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                    <div class="form-group">
                      <label>Seu email</label>
                      <input type="email" class="form-control" name="email">
                    </div>
                    <div class="form-group">
                        <label>Sua senha</label>
                        <input type="password" class="form-control" name="password">
                      </div>
                    <button type="submit" class="btn btn-primary">Criar minha conta</button>
                  </form>
                </div>
                <div class="col-lg">
                <h4>Fazer login</h4>
                <p>Efetue o login se você já possui uma conta</p>
                <form action="/login/login" method="post">
                  <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                    <div class="form-group">
                      <label>Seu email</label>
                      <input type="email" class="form-control" name="email">
                    </div>
                    <div class="form-group">
                        <label>Sua senha</label>
                        <input type="password" class="form-control" name="password">
                      </div>
                    <button type="submit" class="btn btn-primary">Entrar</button>
                  </form>
                </div>
            </div>
        </div>
        <div class="col-log-2"></div>
    </div>
   </div>
   <%- include ('includes/footer')%>